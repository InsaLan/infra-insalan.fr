server {
    listen ${NGINX_PORT};
    server_name dev.${NGINX_HOST};

    resolver 127.0.0.11 valid=10s ipv6=off;
	resolver_timeout 5s;
    
    location / {
        set $frontend http://frontend:5173;
        proxy_pass $frontend;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_redirect off;
    }
}